{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "module": "es2022",
    "jsx": "react-jsx",
    "allowImportingTsExtensions": true,
    "strict": true,
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
